# ============================================================
# 부동산 분석 플랫폼 - 통합 환경변수 설정 예시
# ============================================================
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요.
# 예: cp env.example .env
# ============================================================

# ============================================================
# 애플리케이션 기본 설정
# ============================================================
PROJECT_NAME=부동산 데이터 분석 서비스
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
API_V1_STR=/api/v1

# ============================================================
# 데이터베이스 설정 (PostgreSQL + PostGIS)
# ============================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=realestate
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Backend에서 사용하는 DB URL (로컬 개발용)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================================
# Redis 설정 (캐싱)
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ============================================================
# JWT 인증 설정
# ============================================================
# 프로덕션에서는 반드시 강력한 랜덤 키로 변경하세요
# 생성 방법: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# Clerk 인증 설정
# ============================================================
# Clerk 대시보드에서 발급받은 키를 입력하세요: https://clerk.com/
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=

# ============================================================
# CORS 설정
# ============================================================
# 허용할 프론트엔드 도메인 (콤마로 구분)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081,http://your-domain.com

# ============================================================
# 서버 포트 설정
# ============================================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ============================================================
# 모니터링 서비스 포트 설정
# ============================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ============================================================
# 모니터링 서비스 설정
# ============================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ============================================================
# 데이터베이스 관리 도구 설정
# ============================================================
PGADMIN_DEFAULT_EMAIL=email
PGADMIN_DEFAULT_PASSWORD=change-me
PGADMIN_LISTEN_PORT=8001

# ============================================================
# 외부 API 키 - 국토교통부 (공공데이터포털)
# ============================================================
# 발급: https://www.data.go.kr/
MOLIT_API_KEY=your_molit_api_key

# ============================================================
# 외부 API 키 - 한국부동산원
# ============================================================
REB_API_KEY=your_reb_api_key

# ============================================================
# 외부 API 키 - 통계청 KOSIS
# ============================================================
KOSIS_API_KEY=your_kosis_api_key

# ============================================================
# 외부 API 키 - 카카오
# ============================================================
# JavaScript API Key: 지도 SDK 로드 시 사용
KAKAO_JAVASCRIPT_KEY=your_kakao_javascript_key
VITE_KAKAO_JAVASCRIPT_KEY=your_kakao_javascript_key

# REST API Key: REST API 호출 시 사용
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# ============================================================
# 외부 API 키 - 네이버
# ============================================================
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# ============================================================
# 외부 API 키 - Google Gemini (AI 기능)
# ============================================================
# 발급: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ============================================================
# 이메일 설정 (비밀번호 재설정용)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================
# Frontend 설정 - Vite
# ============================================================
# 백엔드 API URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ============================================================
# Frontend 설정 - Expo
# ============================================================
# 백엔드 API URL
EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1
